{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/test": true,
        "**/*.out": true,
        "**/*.in": true,
    },
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ -O0 -std=c++14 $fileName && $dir/a.out",
    },
    "code-runner.saveFileBeforeRun": true,
    "code-runner.preserveFocus": false,
    "code-runner.ignoreSelection": true,
    "files.associations": {
        "ostream": "cpp",
        "iostream": "cpp"
    },
}